q1

//Properties of file using stat function. 
//display statistics of file whose name
//is passed thru command line argument

#include <stdio.h>
#include <sys/stat.h>
#include <stdlib.h>

void main(int argc, char *argv[])
{
  struct stat buf;

  if (argc!=2)
  {  printf("Error:Invalid number of arguments..");
    exit(0);
  }

 stat(argv[1],&buf);
 printf("\nInode no.:%ld",buf.st_ino);
 printf("\nFile Size:%ld",buf.st_size);
 printf("\nNo.of Hard Links:%ld",buf.st_nlink);
 printf("\nUserid:%u",buf.st_uid);
 printf("\nGroup id:%u",buf.st_gid);
 printf("\nBlock size:%ld",buf.st_blksize);
 printf("\nNo.of Blocks:%ld",buf.st_blocks);
 printf("\n");
}



q2

//Catches Ctrl-C (SIGINT) signal for the first time
//Display appropriate message and terminates on Ctrl-C (SIGINT) again

#include <stdio.h>
#include <signal.h>
#include <unistd.h>

void catcher()
{
  printf("\n Interrupt Signal caught..\n");
  printf("\n Process paused again till next Ctrl-C intertupt again..\n");
  
  pause();
}

void main()
{
  printf("\nProcess started..\n");
  printf("\nProcess paused till Ctrl-C(SIGINT) signal..\n");
  signal(SIGINT,catcher); //Set catcher() to execute on interrupt
  pause();  
  signal(SIGINT,0);//Set to terminate on interrupt
}
